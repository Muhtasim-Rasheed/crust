setup {
	angular_vel = 0
	rainbow = 0
	speed = 0.5
	set_sound_effect("volume", 20)
}

update {
	rainbow += 1
	goto("mouse")
	if key_down("right") {
		angular_vel += speed
	}
	if key_down("left") {
		angular_vel -= speed
	}
	angular_vel *= 0.95
	set_effect("hue", rainbow)
	point(direction() + angular_vel)
}
