setup {
	angular_vel = 0
	speed = 0.5
	set_sound_effect("volume", 20)
}

update {
	goto("mouse")
	if key_down("right") {
		angular_vel += speed
	}
	if key_down("left") {
		angular_vel -= speed
	}
	if key_down("z") {
		play_sound("Nom")
	}
	angular_vel *= 0.95
	set_effect("ghost", 50 + angular_vel * 25)
	set_effect("brightness", angular_vel * 8)
	point(direction() + angular_vel)
}
